<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:background="#d7d7d7"
        tools:context="com.fyusuf.tvrehberi.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GÜNÜN FİLMLERİ"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#d02753"
            android:textColor="#fff"
            android:padding="20px"
            android:layout_margin="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10px">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_film"
                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/btnFilm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:onClick="showAll"
                android:src="@drawable/btn"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GÜNÜN DİZİLERİ"
            android:background="#00c6ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:padding="20px"
            android:layout_margin="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10px">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_dizi"
                android:scrollbars="vertical"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/btnDizi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:onClick="showAll"
                android:layout_weight="1"
                android:src="@drawable/btn"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GÜNÜN HABER PROGRAMLARI"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#b40000"
            android:textColor="#fff"
            android:padding="20px"
            android:layout_margin="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10px">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_haber"
                android:scrollbars="vertical"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/btnHaber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:onClick="showAll"
                android:layout_weight="1"
                android:src="@drawable/btn"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GÜNÜN SPOR PROGRAMLARI"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#169c00"
            android:textColor="#fff"
            android:padding="20px"
            android:layout_margin="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10px">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_spor"
                android:scrollbars="vertical"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/btnSpor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:onClick="showAll"
                android:layout_weight="1"
                android:src="@drawable/btn"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GÜNÜN EĞLENCE PROGRAMLARI"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#ffc23e"
            android:textColor="#fff"
            android:padding="20px"
            android:layout_margin="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10px">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_eglence"
                android:scrollbars="vertical"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/btnEgl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:onClick="showAll"
                android:layout_weight="1"
                android:src="@drawable/btn"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>